  "static_resources": {
    "listeners": [],
    "clusters": [
      {
        "name": "pilot-sd",
        "type": "STATIC",
        "connect_timeout": {
          "nanos": 250_000_000
        },
        "lb_policy": "ROUND_ROBIN",
        "hosts": pilots,
      },
    ]
  },
  "dynamic_resources": {
    "lds_config": {
      "ads": {}
     },
    "cds_config": {
      "ads": {}
    },
    "ads_config": {
